@model DreamCMS.Models.Video

@{
    ViewBag.Title = Model.Title;
    ViewBag.Description = Model.Intro;
    ViewBag.Keywords = Model.Keyword;
    ViewBag.ImageUrl = Model.ImgUrl;
}


<!-- PAGE -->
<div class="panel panel-news">
    <div class="panel-heading"><a href="/lien-he" style="color:#ed3237">@Model.Title</a></div>

    <div class="panel-body">
        @if (string.IsNullOrEmpty(Model.Link))
        {
            <h5>Thông tin đang cập nhật vui lòng quay lại sau.</h5>
        }
        else
        {
            <div class="body-activity">
                <iframe id="video-iframe" style="padding:10px;width:100%;height:400px; border:0" src="@Model.Link.Replace("watch?v=", "embed/")"></iframe>
                @Html.Raw(Model.Intro)
                @Html.Raw(Model.Context)
            </div>
        }
    </div>
</div>
