@using DreamCMS.Models

<!DOCTYPE html>

<html lang="en" xmlns="http://www.w3.org/1999/xhtml">
<head prefix="og: http://ogp.me/ns# fb: http://ogp.me/ns/fb# website: http://ogp.me/ns/website#">
    <meta charset="utf-8" />
    <title>@ViewBag.Title - @Setting.Get("CompanyName")</title>

    <link href="favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="title" content="@ViewBag.Title - @Setting.Get("CompanyName")" />
    <meta name="description" content="@ViewBag.Description" />
    <meta name="keywords" content="@ViewBag.Keywords" />
    <meta name="ROBOTS" content="index, follow" />
    <meta name="author" content="http://www.baobitoanquoc.net@(Html.Raw(Request.RawUrl))" />
    <meta name="googlebot" content="noarchive" />
    <meta content="vi-VN" itemprop="inLanguage" />

    <meta itemprop="datePublished" content="@DateTime.Now.ToShortDateString()" />
    <meta itemprop="image" content="http://www.baobitoanquoc.net@(Html.Raw(ViewBag.ImageUrl))" />
    <meta itemprop="headline" content="@ViewBag.Title" />
    <meta itemprop="url" content="http://www.baobitoanquoc.net@(Html.Raw(Request.RawUrl))" />
    <meta itemprop="alternativeHeadline" content="@ViewBag.Title" />
    <meta itemprop="genre" content="@ViewBag.CategoryName" />

    <link rel="canonical" href="http://www.baobitoanquoc.net@(Html.Raw(Request.RawUrl))" />

    <meta property="og:type" content="article" />
    <meta property="og:url" content="http://www.baobitoanquoc.net@(Html.Raw(Request.RawUrl))" />
    <meta property="og:title" content="@ViewBag.Title" />
    <meta property="og:description" content="@ViewBag.Description" />
    <meta property="og:image" content="http://www.baobitoanquoc.net@(Html.Raw(ViewBag.ImageUrl))" />
    <meta property="og:site_name" content="@Setting.Get("CompanyName")" />
    <meta property="og:updated_time" content="@DateTime.Now.ToShortDateString()" />
    <meta property="article:publisher" content="@Setting.Get("CompanyName")" />
    <meta property="article:published_time" itemprop="datePublished" content="@DateTime.Now.ToShortDateString()" />
    <meta property="article:section" content="@ViewBag.CategoryName" />
    @*<!-- Socail -->
    <meta property="fb:app_id" content="6228292377620800000" />*@
    @*<link href="https://plus.google.com/108890119457447921515000" rel="publisher" />*@
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <!-- CSS LIBRARY -->
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,700&subset=latin,vietnamese' rel='stylesheet' type='text/css'>
    <link href="~/assets/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/assets/js/nivoslider/nivo-slider.css" rel="stylesheet" />
    <link href="~/assets/js/nivoslider/themes/default/default.css" rel="stylesheet" />
    <link href="~/assets/js/revslider/css/settings.css" rel="stylesheet" />
    <link href="~/assets/css/core.css" rel="stylesheet" />

    @RenderSection("styles", required: false)

    <!-- CSS CUSTOM -->
    <link href="~/assets/css/edit.css" rel="stylesheet" />

    <!-- JavaScript library that detects HTML5 and CSS3 features in the user's browser -->
    <script src="~/assets/js/modernizr-2.8.3.min.js"></script>
</head>
<body style="background: #eee url(@Setting.Get("BackgroundWebUrl")) fixed;">
    <!-- LOADING -->
    <div class="loading-container">
        <div class="loading-icon"><a class="logo" href="/"><img src="@Setting.Get("LogoUrlBig")" /></a><br /><div class="pulse"></div></div>
    </div>

    <!-- [HEADER] -->
    <header id="header">
        <div id="panel-top" class="container">
            <div class="row">
                <div class="logo-t col-md-2 col-sm-3"><a href="javascript:;"><img src="@Setting.Get("LogoUrlBig")" class="img-responsive" /></a></div>
                @*<div class="intro-t col-md-5 col-sm-9 hidden-xs">
                        <h4>@Setting.Get("CompanyName")</h4>
                        <div>
                            @Html.Raw(Setting.Get("TopContact"))
                        </div>
                    </div>*@
                <div class="banner-t col-md-10 col-sm-9 hidden-xs">
                    @Html.Partial("_Layout/_TopBanner")
                </div>
            </div>
        </div>

        @Html.Partial("_Layout/_TopNavbar")

    </header>

    <!-- [BODY] -->
    <div id="body">

        @Html.Partial("_Layout/_Slider")

        <div id="wrap" class="container">
            <div class="row">
                <div id="render-body" class="col-md-9 col-sm-8 ">

                    @RenderBody()

                </div>
                <div id="slidebar" class="col-md-3 col-sm-4">

                    @Html.Partial("_Layout/_Sidebar")

                </div>
            </div>
        </div>
    </div>

    <!-- [FOOTER] -->
    <footer id="footer">
        <div class="panel-bottom container bg-dark" data-stellar-background-ratio="0.5" style="background-image: url(@Setting.Get("BottomBackgroudUrl"));">
            @Html.Partial("_Layout/_BottomContact")
            <div class="row copyright">
                <div class="float-left">
                    Copyright &copy;  @DateTime.Now.Year Widensky. All Rights Reserved.
                </div>
            </div>
        </div>
    </footer>

    <!-- JQUERY LIBRARY -->
    <script src="~/assets/js/jquery/jquery.min.js"></script>
    <script src="~/assets/js/bootstrap/bootstrap.min.js"></script>
    <script src="~/assets/js/bootstrap-hover/bootstrap-hover-dropdown.min.js"></script>
    <script src="~/assets/js/scrolltofixed/jquery-scrolltofixed-min.js"></script>
    <script src="~/assets/js/stellar/jquery.stellar.min.js"></script>
    <script src="~/assets/js/fitvids/jquery.fitvids.js"></script>
    <script src="~/assets/js/nivoslider/jquery.nivo.slider.pack.js"></script>
    <script src="~/assets/js/revslider/js/jquery.themepunch.plugins.min.js"></script>
    <script src="~/assets/js/revslider/js/jquery.themepunch.revolution.min.js"></script>

    <!-- JQUERY CUSTOM -->
    <script src="~/assets/js/core.js"></script>
    <script src="~/assets/js/edit.js"></script>

    @RenderSection("scripts", required: false)

    @Html.Raw(Setting.Get("GoogleAnalytics"))

</body>
</html>
