@using DreamCMS.Models
@{
    DBFrontEnd db = new DBFrontEnd();
    List<GroupProduct> ListGroupProduct = db.GroupProducts.Where(x => x.IsDisable == false).OrderBy(x => x.GroupName).OrderBy(x => x.Order).ToList();
    if (ListGroupProduct == null) { ListGroupProduct = new List<GroupProduct>(); }


}
<div class="col-sm-3 sidenav">
    <div>
        @foreach (GroupProduct gr in ListGroupProduct)
        {
            if (gr.IdRoot == null)
            {


                <ul class="nav nav-pills nav-stacked">
                    <li class="active"><a href="/san-pham/@gr.SeoUrl"><span class="glyphicon"></span>@gr.GroupName</a></li>
                    @foreach (GroupProduct gr_sub in ListGroupProduct)
                    {
                        if (gr_sub.IdRoot == gr.GroupProductId)
                        {
                            <li><a href="/san-pham/@gr_sub.SeoUrl" class=""><span class="glyphicon "></span>-   @gr_sub.GroupName</a></li>
                        }

                    }
                </ul>
                <div class="clear" style="padding: 10px;"></div>
            }
        }
    </div>
