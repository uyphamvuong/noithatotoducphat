@model DreamCMS.ModelsAdmin.LoginOrForgotPasswordModel

<!-- BEGIN LOGIN FORM -->
@using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "login-form" }))
{
    @Html.AntiForgeryToken()
    <h3 class="form-title">Đăng nhập vào tài khoản</h3>
    <div class="alert alert-danger @(Model!=null?"":"display-hide")">
        <button class="close" data-close="alert"></button>
        <span>
            @Html.DisplayTextFor(m=>m.LoginModel.ErrorMsg)
        </span>
    </div>
    <div class="form-group">
        <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
        <label class="control-label visible-ie8 visible-ie9">Username</label>
        <div class="input-icon">
            <i class="fa fa-user"></i>
            @Html.TextBoxFor(m => m.LoginModel.Username, new { @class = "form-control placeholder-no-fix", autocomplete = "off", placeholder = "Username" })
            @Html.ValidationMessageFor(m => m.LoginModel.Username, null, new { @class = "help-block" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label visible-ie8 visible-ie9">Password</label>
        <div class="input-icon">
            <i class="fa fa-lock"></i>
            @Html.PasswordFor(m => m.LoginModel.Password, new { @class = "form-control placeholder-no-fix", autocomplete = "off", placeholder = "Password" })
            @Html.ValidationMessageFor(m => m.LoginModel.Password, null, new { @class = "help-block" })
        </div>
    </div>
    <div class="form-actions">
        <label class="checkbox">
            @Html.CheckBoxFor(m => m.LoginModel.RememberMe, htmlAttributes: new{ @checked="true"})  Ghi nhớ cho lần đăng nhập sau
        </label>
        <button type="submit" class="btn green col-sm-offset-6 col-xs-12 col-sm-6">
            Đăng nhập <i class="m-icon-swapright m-icon-white"></i>
        </button>
    </div>
    <div class="forget-password">
        <h4>Bạn quên mật khẩu ?</h4>
        <p>
            Click <a href="javascript:;" id="forget-password">vào đây</a>
            để lấy lại mật khẩu của bạn.
        </p>
    </div>
}
