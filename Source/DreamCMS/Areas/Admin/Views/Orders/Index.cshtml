@model IEnumerable<DreamCMS.Models.Order>

@{
    ViewBag.Title = "Đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SDT)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Adress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Des)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr @(!item.IsSeen ? "class=success" : "") >
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SDT)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Adress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Des)
        </td>
        <td>
            @*@Html.ActionLink("Edit", "Edit", new { id=item.OrderId }) |*@
            @Html.ActionLink(DTextHTML.Details, "Details", new { id = item.OrderId }, new { @class = "btn btn-xs blue" })
            @Html.ActionLink(DTextHTML.Delete, "Delete", new { id = item.OrderId }, new { @class = "btn btn-xs red" })
        </td>
    </tr>
}

</table>
