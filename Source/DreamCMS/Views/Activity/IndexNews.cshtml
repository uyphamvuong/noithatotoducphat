@using DreamCMS.Models
@using MvcPaging
@model IPagedList<News>

@{
    ViewBag.Title = "Danh sách các tin tức";
    ViewBag.Description = "Tin tức là tin về ngành bao bì, tin nổi bật,...";
    ViewBag.Keywords = "tin tức, danh sách, công ty";
}

<!-- PAGE -->
<div class="panel panel-default panel-page-blank">
    <div class="panel-heading">
        <h3 class="panel-title">TIN TỨC</h3>
    </div>
    <div class="panel-body">

        @foreach (News po in Model)
        {
            <div class="row">
                <div class="col-sm-4 item-event-img">
                    <a href="/tin-tuc/@po.TitleId" class="thumbnail" title="@po.Title">
                        <img class="img-responsive" src="@po.ImgUrl" alt="@po.Title" />
                    </a>
                </div>
                <div class="col-sm-8 item-event-sub">
                    <a href="/tin-tuc/@po.TitleId" title="@po.Title"><h5>@po.Title</h5></a>
                    <p title="@po.Title">
                        @po.Intro
                    </p>
                </div>
            </div>
            <br />
        }

        <nav class="text-center">
            @Html.Pager(Model.PageSize, Model.PageNumber, Model.TotalItemCount).Options(o => o
            .DisplayTemplate("BootstrapPagination")
            .MaxNrOfPages(DDefault.DefaultPageSize)
            .AlwaysAddFirstPageNumber()
        )
        </nav>

    </div>
</div>