@using DreamCMS.Models
@using MvcPaging
@model IPagedList<Product>

@{
    GroupProduct gp = ViewBag.GroupProduct;
    ViewBag.Title = gp.GroupName;
    ViewBag.Description = "Các sản phẩm thuộc công ty,...";
    ViewBag.Keywords = "sản phẩm, danh sách, công ty";
    ViewBag.CategoryName = gp.GroupName;
    ViewBag.ImageUrl = gp.ImgUrl;
}

<!-- NHÓM SẢN PHẨM -->
<div class="well-edit well-product">
    <h4 class="h4"><span>Nhóm sản phẩm</span> @gp.GroupName</h4>
    <div class="row">
        <div class="list-product">
            @foreach (Product pd in Model)
            {
                <div class="item-product">
                    <div class="item-product-img">
                        <a href="/san-pham/@gp.SeoUrl/@pd.SeoUrl"><img src="@pd.ImgUrl" alt="@pd.ProductName" /></a>
                    </div>
                    <a href="/san-pham/@gp.SeoUrl/@pd.SeoUrl"><h5>@pd.ProductName</h5></a>
                    <a href="/san-pham/@gp.SeoUrl/@pd.SeoUrl"><span class="view-more">Xem chi tiết</span></a>
                </div>
            }
        </div>
    </div>
</div>

<nav class="text-center">
    @Html.Pager(Model.PageSize, Model.PageNumber, Model.TotalItemCount).Options(o => o
            .DisplayTemplate("BootstrapPagination")
            .MaxNrOfPages(7)
            .AlwaysAddFirstPageNumber()
        )
</nav>
