@model DreamCMS.Models.Videos

@{
    ViewBag.Title = Model.Title;
    ViewBag.Description = Model.Intro;
    ViewBag.Keywords = Model.Keyword;
    ViewBag.ImageUrl = Model.ImgUrl;
}


<!-- PAGE -->
<div class="panel panel-default panel-product">
    <div class="panel-heading">
        <h3 class="panel-title">Tin tức : @Model.Title</h3>
    </div>
    <div class="panel-body">
        <div class="" id="tourpackages-carousel">
            <div class="row">
                @if (string.IsNullOrEmpty(Model.Context))
                {
                    <h5>Thông tin đang cập nhật vui lòng quay lại sau.</h5>
                }
                else
                {
                    <div class="body-activity">
                        <iframe style="padding:10px;width:100%;height:100vh;" src="@Model.Link.Replace("watch?v=", "embed/")"></iframe>
                        @Html.Raw(Model.Context)
                    </div>
                }

            </div>
        </div>
    </div>
</div>


